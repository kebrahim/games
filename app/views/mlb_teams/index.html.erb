
<div class='row-fluid'><div class='span12 center'>
<h3>MLB Teams</h3>

<table class='table table-striped table-bordered table-condensed center'>
  <thead><tr>
    <th>City</th>
    <th>Name</th>
    <th>Abbreviation</th>
    <th>League</th>
    <th>Division</th>
    <th></th>
    <th></th>
    <th></th>
  </tr></thead>

<% @mlb_teams.each do |mlb_team| %>
  <tr>
    <td><%= mlb_team.city %></td>
    <td><%= mlb_team.name %></td>
    <td><%= mlb_team.abbreviation %></td>
    <td><%= mlb_team.league %></td>
    <td><%= mlb_team.division %></td>
    <td><%= link_to 'Show', mlb_team %></td>
    <td><%= link_to 'Edit', edit_mlb_team_path(mlb_team) %></td>
    <td><%= link_to 'Destroy', mlb_team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Mlb team', new_mlb_team_path, class: 'btn' %>
<br/><br/>
</div></div>
