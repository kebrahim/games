<h1>Listing mlb_teams</h1>

<table class='table table-striped table-bordered table-condensed'>
  <tr>
    <th>City</th>
    <th>Name</th>
    <th>Abbreviation</th>
    <th>Division</th>
    <th>League</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @mlb_teams.each do |mlb_team| %>
  <tr>
    <td><%= mlb_team.city %></td>
    <td><%= mlb_team.name %></td>
    <td><%= mlb_team.abbreviation %></td>
    <td><%= mlb_team.division %></td>
    <td><%= mlb_team.league %></td>
    <td><%= link_to 'Show', mlb_team %></td>
    <td><%= link_to 'Edit', edit_mlb_team_path(mlb_team) %></td>
    <td><%= link_to 'Destroy', mlb_team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

