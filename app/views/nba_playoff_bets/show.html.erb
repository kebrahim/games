
<%= navigationBarAtLevel(NavigationHelper::NBA_PLAYOFFS_BUTTON, false) %>

<div class='row-fluid'>
  <div class='span2 center nexttoh1'>
    <a class='btn btn-inverse' href='../nbaPlayoffs'>Standings</a>
  </div>
  <div class='span8 center'>
    <h3>NBA Playoffs <%= @currentYear %></h3>
  </div>
  <div class='span2 center nexttoh1'>
    <img class='img_50_49' src='../assets/nba.jpg' />
  </div>
</div>

<div class='row-fluid'><div class='span12 center'>
  <h4><%= @user.fullName %>'s Picks</h4>
  <div class='row-fluid'>
    <div class='span2 center tourney'>
      <%= matchupAtPosition(1, 1, "East Quarters") %>
    </div>
    <div class='span2 offset8 center tourney'>
      <%= matchupAtPosition(1, 5, "West Quarters") %>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span2 offset2 center tourney'>
      <strong>East Semis</strong><br/>
      <%= readOnlyBetAtRoundPositionForUser(1, 1, @user) %><br/>
      <%= readOnlyBetAtRoundPositionForUser(1, 2, @user) %>
    </div>
    <div class='span2 offset1 center tourney'>
      <strong>NBA Champion</strong><br/>
      <%= readOnlyBetAtRoundPositionForUser(4, 1, @user) %>
    </div>
    <div class='span2 offset1 center tourney'>
      <strong>West Semis</strong><br/>
      <%= readOnlyBetAtRoundPositionForUser(1, 5, @user) %><br/>
      <%= readOnlyBetAtRoundPositionForUser(1, 6, @user) %>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span2 center tourney'>
      <%= matchupAtPosition(1, 2, "East Quarters") %>
    </div>
    <div class='span2 offset8 center tourney'>
      <%= matchupAtPosition(1, 6, "West Quarters") %>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span2 offset4 center tourney'>
      <strong>East Finals</strong><br/>
      <%= readOnlyBetAtRoundPositionForUser(2, 1, @user) %><br/>
      <%= readOnlyBetAtRoundPositionForUser(2, 2, @user) %><br/>
    </div>
    <div class='span2 center tourney'>
      <strong>West Finals</strong><br/>
      <%= readOnlyBetAtRoundPositionForUser(2, 3, @user) %><br/>
      <%= readOnlyBetAtRoundPositionForUser(2, 4, @user) %><br/>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span2 center tourney'>
      <%= matchupAtPosition(1, 3, "East Quarters") %>
    </div>
    <div class='span2 offset8 center tourney'>
      <%= matchupAtPosition(1, 7, "West Quarters") %>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span2 offset2 center tourney'>
      <strong>East Semis</strong><br/>
      <%= readOnlyBetAtRoundPositionForUser(1, 3, @user) %><br/>
      <%= readOnlyBetAtRoundPositionForUser(1, 4, @user) %>
    </div>
    <div class='span2 offset1 center tourney'>
      <strong>NBA Finals</strong><br/>
      <%= readOnlyBetAtRoundPositionForUser(3, 1, @user) %><br/>
      <%= readOnlyBetAtRoundPositionForUser(3, 2, @user) %>
    </div>
    <div class='span2 offset1 center tourney'>
      <strong>West Semis</strong><br/>
      <%= readOnlyBetAtRoundPositionForUser(1, 7, @user) %><br/>
      <%= readOnlyBetAtRoundPositionForUser(1, 8, @user) %>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span2 center tourney'>
      <%= matchupAtPosition(1, 4, "East Quarters") %>
    </div>
    <div class='span2 offset8 center tourney'>
      <%= matchupAtPosition(1, 8, "West Quarters") %>
    </div>
  </div>

</div></div>