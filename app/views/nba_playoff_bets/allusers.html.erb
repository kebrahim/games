      <%= matchupAtPosition(1, 2, "East Quarters") %>
    </div>
    <div class='span2 offset8 center tourney'>
      <%= matchupAtPosition(1, 6, "West Quarters") %>
    </div>
  </div>
  <div class='row-fluid'>
