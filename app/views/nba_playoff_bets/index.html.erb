
<%= navigationBar(NavigationHelper::NBA_PLAYOFFS_BUTTON) %>

<div class='row-fluid'>
  <div class='span2 center nexttoh1'>
    <a class='btn btn-inverse' href='nbaPlayoffs'>Standings</a>
  </div>
  <div class='span8 center'>
    <h3>NBA Playoffs <%= @currentYear %></h3>
  </div>
  <div class='span2 center nexttoh1'>
    <img class='img_50_49' src='assets/nba.jpg' />
  </div>
</div>

<form action='/nba_playoff_bets_save' method='post'>
<div class='row-fluid'><div class='span12 center'>
  <h4>Edit My Picks</h4>
  <%= showNoticeAsAlert(notice) %>
  <div class='row-fluid'>
    <div class='span2 center tourney'>
      <%= matchupAtPosition(1, 1, "East Quarters") %>
    </div>
    <div class='span2 offset8 center tourney'>
      <%= matchupAtPosition(1, 5, "West Quarters") %>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span2 offset2 center tourney'>
      <strong>East Semis</strong><br/>
      <%= selectAtRoundPosition(1, 1) %><br/>
      <%= selectAtRoundPosition(1, 2) %>
    </div>
    <div class='span2 offset1 center tourney'>
      <strong>NBA Champion</strong><br/>
      <%= selectAtRoundPosition(4, 1) %>
    </div>
    <div class='span2 offset1 center tourney'>
      <strong>West Semis</strong><br/>
      <%= selectAtRoundPosition(1, 5) %><br/>
      <%= selectAtRoundPosition(1, 6) %>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span2 center tourney'>
      <%= matchupAtPosition(1, 2, "East Quarters") %>
    </div>
    <div class='span2 offset8 center tourney'>
      <%= matchupAtPosition(1, 6, "West Quarters") %>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span2 offset4 center tourney'>
      <strong>East Finals</strong><br/>
      <%= selectAtRoundPosition(2, 1) %><br/>
      <%= selectAtRoundPosition(2, 2) %><br/>
    </div>
    <div class='span2 center tourney'>
      <strong>West Finals</strong><br/>
      <%= selectAtRoundPosition(2, 3) %><br/>
      <%= selectAtRoundPosition(2, 4) %><br/>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span2 center tourney'>
      <%= matchupAtPosition(1, 3, "East Quarters") %>
    </div>
    <div class='span2 offset8 center tourney'>
      <%= matchupAtPosition(1, 7, "West Quarters") %>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span2 offset2 center tourney'>
      <strong>East Semis</strong><br/>
      <%= selectAtRoundPosition(1, 3) %><br/>
      <%= selectAtRoundPosition(1, 4) %>
    </div>
    <div class='span2 offset1 center tourney'>
      <strong>NBA Finals</strong><br/>
      <%= selectAtRoundPosition(3, 1) %><br/>
      <%= selectAtRoundPosition(3, 2) %>
    </div>
    <div class='span2 offset1 center tourney'>
      <strong>West Semis</strong><br/>
      <%= selectAtRoundPosition(1, 7) %><br/>
      <%= selectAtRoundPosition(1, 8) %>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span2 center tourney'>
      <%= matchupAtPosition(1, 4, "East Quarters") %>
    </div>
    <div class='span2 offset8 center tourney'>
      <%= matchupAtPosition(1, 8, "West Quarters") %>
    </div>
  </div>
  <p>
    <input type='submit' name='save' class='btn btn-primary' value='Save Changes' />&nbsp
    <input type='submit' name='cancel' class='btn' value='Cancel' />
  </p>
</div></div>
</form>
