<h3><%= @logged_in_user.first_name %>'s MLB Over/Unders</h3>

<table class='table table-striped table-bordered table-condensed'>
  <thead>
  <tr>
  	<th>MLB Team</th>
  	<th>Line</th>
    <th>Prediction</th>
    <th>Amount</th>
  </tr>
  </thead>

<% total_bets = 0 %>
<% @mlb_win_bets.each do |mlb_win_bet| %>
  <tr>
    <td><%= mlb_win_bet.mlb_win.mlb_team.abbreviation %></td>
    <td><%= mlb_win_bet.mlb_win.line %></td>
    <td><%= mlb_win_bet.prediction %></td>
    <td><%= mlb_win_bet.amount %></td>
  </tr>
  <% total_bets += mlb_win_bet.amount %>
<% end %>
  <tr><td colspan=3><strong>Totals</strong></td><td><%= total_bets %></td></tr>
</table>
