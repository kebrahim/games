
<%= navigationBar(NavigationHelper::MLB_OVER_UNDERS_BUTTON) %>

<div class='row-fluid'>
  <div class='span2 center nexttoh1'>
    <img class='img_100_50' src='assets/mlb.gif' />
  </div>
  <div class='span8 center'>
    <h3>MLB Over/Unders <%= @currentYear %></h3>
  </div>
  <div class='span2 center nexttoh1'>
    <img class='img_100_50' src='assets/mlb.gif' />
  </div>
</div>


<div class='row-fluid'>
  <div class='span5 center'>
    <% if @betsEditable %>
      <!-- My Bets -->
      <h4>My Bets</h4>
      <table class='table table-striped table-bordered table-condensed center'>
        <thead>
          <tr>
            <th>MLB Team</th>
            <th>Line</th>
            <th>Prediction</th>
            <th>Bet Amount</th>
          </tr>
        </thead>
        <% @userBets.each do |bet| %>
          <tr>
            <td><%= bet.mlb_win.mlb_team.abbreviation %></td>
            <td><%= bet.mlb_win.line.to_s %></td>
            <td><%= bet.prediction %></td>
            <td><%= bet.amount.to_s %></td>
          </tr>
        <% end %>
      </table>
      <a class='btn btn-primary' href='mlbOverUnderBets'>Change My Bets</a><br/><br/>
    <% else %>
      <!-- MLB Standings -->
      <h4>MLB Standings</h4>
      <p>Updated on (<%= @standingsDate %>)</p>
      <%= division_standings_table("NL", "East", @currentYear, @teamToStandingsMap) %>
      <%= division_standings_table("NL", "Central", @currentYear, @teamToStandingsMap) %>
      <%= division_standings_table("NL", "West", @currentYear, @teamToStandingsMap) %>
      <%= division_standings_table("AL", "East", @currentYear, @teamToStandingsMap) %>
      <%= division_standings_table("AL", "Central", @currentYear, @teamToStandingsMap) %>
      <%= division_standings_table("AL", "West", @currentYear, @teamToStandingsMap) %>
    <% end %>
  </div>

  <div class='span7 center'>
    <% last_user_id = -1 %>
    <% first_user = true %>
    
    <!-- TODO Only show teams picks after season starts; before that just show user name -->
    <h4>Over/Under Standings</h4>
    <% @allBets.each do |bet| %>
      <% if last_user_id != bet.user_id %>
        <% last_user_id = bet.user_id %>
        <% if first_user == false %>
          </table>
        <% else %>
          <% first_user = false %>
        <% end %>

        <h5><%= bet.user.fullName %></h5>
        <table class='table table-striped table-bordered table-condensed center'>
          <thead>
            <tr>
              <th>MLB Team</th>
              <th>Prediction</th>
              <th>Line</th>
              <th>On Pace</th>
              <th>Bet Amount</th>
            </tr>
          </thead>
      <% end %>
            <%= player_standings_row(bet, @teamToStandingsMap) %>
    <% end %>
        </table>
  </div>
</div>
