
<%= navigationBar(NavigationHelper::ADMIN_NBA_TEAMS_BUTTON) %>

<div class='row-fluid'><div class='span12 center'>
<h3>Manage NBA Teams</h3>

<table class='table table-striped table-bordered table-condensed center'>
  <thead><tr>
    <th>City</th>
    <th>Name</th>
    <th>Abbreviation</th>
    <th>League</th>
    <th>Division</th>
    <th></th>
    <th></th>
    <th></th>
  </tr></thead>

<% @nba_teams.each do |nba_team| %>
  <tr>
    <td><%= nba_team.city %></td>
    <td><%= nba_team.name %></td>
    <td><%= nba_team.abbreviation %></td>
    <td><%= nba_team.league %></td>
    <td><%= nba_team.division %></td>
    <td><%= link_to 'Show', nba_team %></td>
    <td><%= link_to 'Edit', edit_nba_team_path(nba_team) %></td>
    <td><%= link_to 'Destroy', nba_team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Create NBA team', new_nba_team_path, class: 'btn' %>
<br/><br/>
</div></div>
